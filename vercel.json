{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "installCommand": "apt-get update && apt-get install -y libnss3 libasound2 libatk-bridge2.0-0 libgtk-3-0 libgbm-dev"
            }
        },
        {
            "src": "/api/**/*.js",
            "use": "@vercel/node"
        }
    ]
}
